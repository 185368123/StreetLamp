<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="30dip"
    android:paddingBottom="20dip"
    android:orientation="horizontal" >


    <LinearLayout
        android:layout_marginRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_control_close"
            style="@style/SmallTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="@string/close" />

        <CheckBox
            android:id="@+id/chk_control_button"
            style="@style/ButtonCheckBoxStyle"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="3dip" />

        <TextView
            android:id="@+id/tv_control_open"
            style="@style/SmallTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_control_aiming"
            style="@style/NormalBlackTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:text="@string/aiming" />
    </LinearLayout>
    
    
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/llyt_dimming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:id="@+id/tv_control_seekbar_up"
            style="@style/SmallWhiteTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_seekbar_up" />

        <SeekBar
            android:id="@+id/sb_control_dimming"
            style="@style/DimmingSeekBarStyle" />
    </LinearLayout>

</LinearLayout>