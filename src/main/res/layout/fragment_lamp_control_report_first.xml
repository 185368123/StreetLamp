                    android:text="@string/default_text" />

                <TextView
                    style="@style/NormalBlackTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/average_value" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>