                <TextView
                    style="@style/NormalBlackTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maximum_value" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
