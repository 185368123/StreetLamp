<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/whiteNavigationBarStyle"
    android:layout_width="match_parent" >

    <ImageView
        android:id="@+id/iv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:src="@drawable/ic_fault" />
    
     <TextView
        android:id="@+id/tv_handling_status"
        style="@style/NormalTextSizeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dip"
        android:layout_toLeftOf="@id/tv_handling_status"
        android:layout_toRightOf="@id/iv_sign" >

        <TextView
            android:singleLine="true"
            android:id="@+id/tv_fault_info"
            style="@style/NormalBlackTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:singleLine="true"
            android:id="@+id/tv_project"
            style="@style/NormalBlackTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/tv_fault_info" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/SmallGrayTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fault_info"
            android:layout_marginTop="2dip" />
    </RelativeLayout>


</RelativeLayout>