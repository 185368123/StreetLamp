<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
       style="@style/whiteNavigationBarStyle" >

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/imgbtn_navigation_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="back"
            android:padding="10dip"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:singleLine="true"
            android:id="@+id/tv_navigation_bar_title"
            style="@style/MiddleBlackTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/imgbtn_navigation_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:padding="10dip"
            android:visibility="gone" />

        <TextView
            style="@style/MiddleTextSizeStyle"
            android:layout_centerVertical="true"
            android:id="@+id/tv_navigation_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dip"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flyt_navigation_bar_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>