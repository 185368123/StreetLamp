<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        style="@style/NormalRedTextSizeStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_width"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:paddingRight="10dip"
        android:text="@string/read" />

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/street_lamp_load_mode" />

        <EditText
            android:id="@+id/edt_load_setting_street_lamp_load_mode_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/first_working_hours" />

        <EditText
            android:id="@+id/edt_load_setting_first_working_hours_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/first_working_power" />

        <EditText
            android:id="@+id/edt_load_setting_first_working_power_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/second_working_hours" />

        <EditText
            android:id="@+id/edt_load_setting_second_working_hours_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/second_working_power" />

        <EditText
            android:id="@+id/edt_load_setting_second_working_power_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/third_working_hours" />

        <EditText
            android:id="@+id/edt_load_setting_third_working_hours_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
