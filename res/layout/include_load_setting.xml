            android:text="@string/third_working_power" />

        <EditText
            android:id="@+id/edt_load_setting_third_working_power_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/morning_light_time" />

        <EditText
            android:id="@+id/edt_load_setting_morning_light_time_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>
    
    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
