            android:text="@string/morning_light_power" />

        <EditText
            android:id="@+id/edt_load_setting_morning_light_power_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/light_control_voltage" />

        <EditText
            android:id="@+id/edt_load_setting_light_control_voltage_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
            style="@style/LeftTextViewStyle"
            android:text="@string/light_control_delay_time" />

        <EditText
            android:id="@+id/edt_load_setting_light_control_delay_time_value"
            style="@style/rightEditTextStyle2" />
    </LinearLayout>

    <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

        <TextView
