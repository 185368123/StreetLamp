<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/whiteNavigationBarStyle" >

        <ImageButton
            android:id="@+id/imgbtn_report_accout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="10dip"
            android:src="@drawable/ic_accout" />

        <RadioGroup
            android:id="@+id/rgrp_report_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_report_project_report"
                style="@style/TabLRRadioButtonStyle"
                android:background="@drawable/txt_left_tab_selector"
                android:checked="true"
                android:text="@string/project_report" />

            <RadioButton
                android:id="@+id/rbtn_report_lamp_control_report"
                style="@style/TabLRRadioButtonStyle"
                android:background="@drawable/txt_right_tab_selector"
                android:text="@string/lamp_control_report" />
        </RadioGroup>
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/vf_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ViewFlipper>

</LinearLayout>