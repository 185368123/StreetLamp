<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_alphabet"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/bg_app"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:text="A" />

    <RelativeLayout style="@style/whiteNavigationBarStyle" >

        <TextView
            android:id="@+id/tv_network_number"
            style="@style/NormalGrayTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip" />

        <TextView
            android:id="@+id/tv_fist_project_name"
            style="@style/MiddleWhiteTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/bg_blue_circle"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_project_name"
            style="@style/NormalBlackTextSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/tv_network_number"
            android:layout_toRightOf="@id/tv_fist_project_name"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        style="@style/backgroundColorLineHorizontall"
        android:layout_marginLeft="10dip" />

</LinearLayout>