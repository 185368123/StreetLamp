<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

            <TextView
                style="@style/LeftTextViewStyle"
                android:text="@string/network_number" />

            <TextView
                android:id="@+id/tv_network_details_network_number_value"
                style="@style/rightTextViewStyle"
                android:text="@string/default_text" />
        </LinearLayout>

        <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

            <TextView
                style="@style/LeftTextViewStyle"
                android:text="@string/network_name" />

            <TextView
                android:id="@+id/tv_network_details_network_name_value"
                style="@style/rightTextViewStyle"
                android:text="@string/default_text" />
        </LinearLayout>

        <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

            <TextView
                style="@style/LeftTextViewStyle"
                android:text="@string/network_state" />

            <TextView
                android:id="@+id/tv_network_details_network_state_value"
                style="@style/rightTextViewStyle"
                android:text="@string/default_text" />
        </LinearLayout>

        <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

            <TextView
                style="@style/LeftTextViewStyle"
                android:text="@string/section" />

            <TextView
                android:id="@+id/tv_network_details_section_value"
                style="@style/rightTextViewStyle"
                android:text="@string/default_text" />
        </LinearLayout>

        <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

            <TextView
                style="@style/LeftTextViewStyle"
                android:text="@string/sim_number" />

            <TextView
                android:id="@+id/tv_network_details_sim_number_value"
                style="@style/rightTextViewStyle"
                android:text="@string/default_text" />
        </LinearLayout>

        <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

            <TextView
                style="@style/LeftTextViewStyle"
                android:text="@string/registration_package" />

            <TextView
                android:id="@+id/tv_network_details_registration_package_value"
                style="@style/rightTextViewStyle"
                android:text="@string/default_text" />
        </LinearLayout>

        <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

            <TextView
                style="@style/LeftTextViewStyle"
                android:text="@string/longitude" />

            <TextView
                android:id="@+id/tv_network_details_longitude_value"
                style="@style/rightTextViewStyle"
                android:text="@string/default_text" />
        </LinearLayout>

        <LinearLayout style="@style/LeftRightLinearLayoutStyle" >

            <TextView
                style="@style/LeftTextViewStyle"
                android:text="@string/latitude" />

            <TextView
                android:id="@+id/tv_network_details_latitude_value"
                style="@style/rightTextViewStyle"
                android:text="@string/default_text" />
        </LinearLayout>
        

        <LinearLayout
             android:layout_marginTop="1dip"
            android:paddingTop="25dip"
            android:paddingBottom="25dip"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_network_details_installed_number_value"
                    style="@style/hugeBlackTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_text" />

                <TextView
                    style="@style/SmallGrayTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/installed_number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dip"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_network_details_create_time_value"
                    style="@style/hugeBlackTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_text" />

                <TextView
                    style="@style/SmallGrayTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/create_time" />
            </LinearLayout>
        </LinearLayout>

            <Button
                android:layout_marginTop="20dip"
                android:id="@+id/btn_network_details_view_lamp_control"
                style="@style/NormalWhiteTextSizeStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/bg_button_rounded_rectangle_blue"
                android:text="@string/view_lamp_control" />

            <Button
                android:layout_marginBottom="20dip"
                android:id="@+id/btn_network_details_delete_this_network"
                style="@style/NormalWhiteTextSizeStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/bg_button_rounded_rectangle_red"
                android:text="@string/delete_this_network" />
    </LinearLayout>

</ScrollView>